        <record id="id_view_account_asset_inherit_add_fields" model="ir.ui.view">
            <field name="name">view_account_asset_inherit_add_fields</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="after">
                    <group string="Car Data">
                        <group>
                            <field name="engine_no"/>
                            <field name="chassis_no"/>
                            <field name="plate_no"/>
                            <field name="model_no"/>
                            <field name="Car_color"/>
                            <field name="insurance_policy_no"/>
                        </group>
                        <group>
                            <field name="rent_amount"/>
                            <field name="license_date"/>
                            <field name="branch_id"/>
                            <field name="vendor_id"/>
                            <field name="bank_and_check_no"/>
                            <field name="invoice_no"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="id_action_compute_depreciation" model="ir.actions.server">
            <field name="name">Compute Depreciation</field>
            <field name="model_id" ref="account_asset.model_account_asset"/>
            <field name="binding_model_id" ref="account_asset.model_account_asset"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                for rec in records:
                rec.compute_depreciation_board()
            </field>
        </record>
        <record id="id_action_validate" model="ir.actions.server">
            <field name="name">Confirm</field>
            <field name="model_id" ref="account_asset.model_account_asset"/>
            <field name="binding_model_id" ref="account_asset.model_account_asset"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                for rec in records:
                rec.validate()
            </field>
        </record>
